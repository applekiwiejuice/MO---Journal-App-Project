<p id="notice"><%= notice %></p>

<h1>Tasks for Category ID: <%=@category.id%></h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Task description</th>
      <th>Task deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.task_description %></td>
        <td><%= task.task_deadline %></td>
        <td><%= link_to 'Show', category_task_path(:id => task.id) %></td>
        <td><%= link_to 'Edit', edit_category_task_path(:id => task.id) %></td>
        <td><%= link_to 'Destroy', category_task_path(:id => task.id), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_category_task_path %> |
<%= link_to 'Back', categories_path(current_user.id) %>
