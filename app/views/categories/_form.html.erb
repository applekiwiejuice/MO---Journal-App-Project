
<%= form_with(model: category, :html => {:class => "form-signin"}) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-light alert-dismissible fade show alert-fixed" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
        <% category.errors.each do |error| %>
          <p class="small-warning d-inline"><%= error.full_message %> - </p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category_name %>
    <%= form.text_field :category_name, class: "form-control" %>
  </div>

  <div class="field mt-2">
    <%= form.label :category_description %>
    <%= form.text_area :category_description, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Create/Update Category", class: "btn btn-lg btn-outline-light btn-block mt-3"  %>
  </div>
<% end %>
