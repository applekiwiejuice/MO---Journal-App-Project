<%= image_tag ('mo_white_logo.png'), class: "img-25" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
  <div class="container">
    
    <div class="row">

      <div class="col-lg-6 col-sm-12 mb-5">
        <%= link_to " Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: "btn btn-lg btn-outline-light btn-block fab fa-facebook facebook-button-color" %>
        <%= link_to " Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn btn-lg btn-outline-light btn-block fab fa-google google-button-color" %>
        <%= link_to " Sign in with Github", user_github_omniauth_authorize_path, method: :post, class: "btn btn-lg btn-outline-light btn-block fab fa-github github-button-color" %>
      </div>

      <div class="col-lg-6 col-sm-12">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", id: "inputEmail", class: "form-control", placeholder: "Email address" %>
        <%= f.password_field :password, autocomplete: "current-password", type: "password", id: "inputPassword", class: "form-control", placeholder: "Password" %>
        <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, type: "checkbox" %>
      </div>
        <% end %>
        <%= f.submit "Sign in", class: "btn btn-lg btn-outline-light btn-block" %>
      </div>
  
    </div>
  </div>
    
<% end %>

<%= render "devise/shared/links" %>