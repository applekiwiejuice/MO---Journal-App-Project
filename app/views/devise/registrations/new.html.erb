
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-signup"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource, class: "text-center" %>
  <div class="container mt-3">
  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12 text-center p-3">
      <%= image_tag ('mo_create.png'), class: "img-60" %>
      <h2 class= "mt-3">Sign up</h2>
    </div>
    <div class="col-lg-8 col-md-6 col-sm-12 px-3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, 
          autofocus: true, 
          type: "text", 
          class: "form-control", 
          placeholder: "First Name" %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, 
          autofocus: true, 
          type: "text", 
          class: "form-control", 
          placeholder: "Last Name" %>

      <%= f.label :email, for: "inputEmail" %>
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email", 
          type: "email", 
          id: "inputEmail", 
          class: "form-control", 
          placeholder: "Email address" %>

      <%= f.label :password, for: "inputPassword" %>
      <%= f.password_field :password, 
          autofocus: true, 
          autocomplete: "new-password", 
          type: "password", 
          id: "inputPassword", 
          class: "form-control", 
          placeholder: "Password" %>

      <%= f.label :password_confirmation, for: "inputPasswordConfirmation" %>
      <%= f.password_field :password_confirmation, 
          autofocus: true, autocomplete: "new-password", 
          type: "password", 
          id: "inputPasswordConfirmation", 
          class: "form-control", 
          placeholder: "Password" %>
          
      <%= f.submit "Sign up", class: "btn btn-lg btn-outline-light btn-block mt-3" %>   
      <div class="text-center">
      <%= render "devise/shared/links"%>
      <%= link_to ' Back', new_user_session_path, class: "far fa-arrow-alt-circle-left mt-2" %>
      </div>
    </div>
   
  </div>
</div>
<% end %>






